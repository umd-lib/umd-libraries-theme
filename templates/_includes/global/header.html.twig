{%
  set header_classes = [
    'site-header',
    umd_terp_header_light ? 'site-header-light',
  ]
%}
<header class="{{ header_classes|join(' ') }}">
        <div class="site-header__bar max-bound">
      {% if override_site_logo_link %}
        <a class="navbar-brand" href="https://www.lib.umd.edu/">
      {% else %}
        <a class="navbar-brand" href="{{ path('<front>') }}">
      {% endif %}
        {% if logo_path %}
          <img src="{{ logo_path }}" alt="{{ site_name }} logo">
        {% else %}
          <span role="img" aria-label="{{ site_name }} logo" class="navbar-brand-text">
            <span aria-hidden="true">{{ site_name }}</span>
            {% if site_slogan %}
              <div class="site-slogan">{{ site_slogan }}</div>
            {% endif %}
          </span>
        {% endif %}
      </a>
        {% if show_digital_branding %}
          {% if add_digital_branding_link %}
            <a href="https://digital.lib.umd.edu" aria-label="Digital Content from the University of Marylandâ€™s Libraries" class="brand">Digital Collections</a>
          {% else %}
            <div class="brand">Digital Collections</div>
        {% endif %}
      {% endif %}
                <a href="#site-header-nav" class="site-header__nav-toggle" id="site-header-nav-toggle" tabindex="0" role="button" aria-label="Main Menu" aria-controls="site-header-nav">
                        <span aria-hidden="true" class="site-header__nav-icon">
                                <span role="presentation"></span>
                                <span role="presentation"></span>
                                <span role="presentation"></span>
                                <span role="presentation"></span>
                        </span>
                        <span class="sr-only">Main Menu</span>
                </a>
                <nav class="site-header__nav" id="site-header-nav" aria-labelledby="site-header-nav-toggle">
                        {{ drupal_menu('main', 1, 2, TRUE) }}
                </nav>
        </div>
</header>
